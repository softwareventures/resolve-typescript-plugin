{
  "name": "resolve-typescript-plugin",
  "version": "0.0.0-development",
  "description": "webpack plugin to resolve TypeScript files when importing with js file extension in ESM projects",
  "keywords": [
    "ESM",
    "TypeScript",
    "plugin",
    "resolve",
    "webpack"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/resolve-typescript-plugin",
  "bugs": "https://github.com/softwareventures/resolve-typescript-plugin/issues",
  "repository": "github:softwareventures/resolve-typescript-plugin",
  "license": "ISC",
  "scripts": {
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "tsc && node ./fix-types-for-back-compat.js",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "sideEffects": false,
  "exports": {
    ".": "./index.js"
  },
  "types": "index.d.ts",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "dependencies": {
    "tslib": "2.5.2"
  },
  "peerDependencies": {
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "7.1.1",
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "3.1.0",
    "@softwareventures/tsconfig": "7.0.0",
    "@types/node": "16.18.34",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "ava": "5.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "40.3.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sonarjs": "0.19.0",
    "prettier": "2.8.8",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "webpack": "5.83.1",
    "yarn": "1.22.19"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures",
    "overrides": [
      {
        "files": [
          "test-projects/**/*.{,c,m}ts{,x}"
        ],
        "parserOptions": {
          "project": "tsconfig.test.json"
        }
      }
    ]
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ],
    "timeout": "20m"
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@3.5.0"
}
